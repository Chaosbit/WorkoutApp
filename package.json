{
  "name": "workout-timer-pwa",
  "version": "1.0.0",
  "description": "A Progressive Web App for running markdown-based workouts with timers",
  "main": "index.html",
  "scripts": {
    "test": "jest && cypress run",
    "test:unit": "jest",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:backend": "cd backend && dotnet test",
    "test:all": "npm run test:unit && npm run test:backend && npm run test:e2e",
    "test:headless": "cypress run --headless",
    "serve": "python3 -m http.server 8000",
    "start": "python3 -m http.server 8000"
  },
  "keywords": [
    "pwa",
    "workout",
    "timer",
    "markdown",
    "fitness",
    "offline"
  ],
  "author": "Claude Code",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@types/jest": "^29.5.8",
    "babel-jest": "^30.0.5",
    "cypress": "^13.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "wait-on": "^8.0.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/workout-timer-pwa.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/workout-timer-pwa/issues"
  },
  "homepage": "https://github.com/your-username/workout-timer-pwa#readme",
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/sw-registration.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  }
}
